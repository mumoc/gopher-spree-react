<% content_for :sidebar do %>
  <div id='taxonomies-list' data-hook='homepage_sidebar_navigation'></div>
<% end %>

<div id='products-list' data-hook='homepage_products'></div>


<%- content_for :javascripts do %>
  <script type='text/javascript'>
    $(document).ready(function() {
      var taxonomiesUrl = 'http://localhost:5000/api/taxonomies?token=d89ffcec5c8adfc0992c58968f5efa14bab1ee5d3c3f625e';
      var reactTaxonomy = React.createElement(TaxonomiesSection, { url: taxonomiesUrl });
      React.render(reactTaxonomy, document.getElementById('taxonomies-list'));

      var productsUrl = 'http://localhost:5000/api/products?token=d89ffcec5c8adfc0992c58968f5efa14bab1ee5d3c3f625e';
      var reactProduct = React.createElement(ProductsSection, { url: productsUrl });
      React.render(reactProduct, document.getElementById('products-list'));
    });
  </script>
<% end %>
